.table
  position: relative
  user-select none
.table table
  width: 100%
  border-collapse: separate;
  border: none;
  table-layout: fixed;
.table td
  transition all 0.05s
  transform-origin 0% 50%
  padding 1px 1px
  border-bottom: 1px solid rgb(225, 225, 225);
  border-right: 1px solid rgb(225, 225, 225);
.table .cell
  padding: 3px 6px;
  transform-origin 0% 50%
  box-sizing border-box
  transition all 0.15s
  word-break:break-all;
  &:focus
    outline 3px solid rgba(12,132,109, 0.55)
  &.select-bg
    background-color: rgba(35,132,209, 0.25)
.table table
  border-left: 1px solid rgb(225, 225, 225);
  border-top: 1px solid rgb(225, 225, 225);


.table table.is_alone_row
  border: none
  padding 0
  border-collapse separate

.table td.is_alone_td
  border: none;
  padding: 0;

.table .line
  position: absolute;
  display none
  &.line-move-h
    cursor s-resize
  &.line-move-v
    cursor e-resize
.table .vertical-line
  width: 5px;
  left: 0;
  top: 0;
  margin-left -2px
  height 100%;
  .after
    content ''
    display none
    width 1px
    box-shadow 0px 0px 2px #2384d1
    height 100%
    position absolute
    background: #2384d1;
    top 0
    left 50%
    transform translateX(-50%)
.table .horizontal-line
  top: 0;
  left: 0;
  height: 5px;
  //background: rgba(225,225,225, .4);
  width: 100%;
  margin-top: -2px;
  .after
    content ''
    display none
    height 1px
    box-shadow 0px 0px 2px #2384d1
    width 100%
    position absolute
    background: #2384d1;
    left 0
    top 50%
    transform translateY(-50%)


